               </div> 

                <div class="tempInfo">
                    <div class="daydate">
                         <p id="cityName">

                        </p>

                        <p id="today">

                        </p>

                    </div>

                    <div class="main">
                       

                        <div class="middle_layer data_hide">
                            <p id="temp">
                                
                            </p>
                                <p id="tempicon">
                                    
                                </p>
                            
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    {{>footer}}

<script src="js/main.js"></script>
</body>

</html>